{
    "version": 2,
    "builds": [
        {
            "src": "server/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "server/app.js"
        },
        {
            "source": "/((?!static/).*)",
            "destination": "/dist/index.html"
        }
    ]
}  